{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictFunctionTypes": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test",
    "dist"
  ]
}
